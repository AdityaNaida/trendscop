        <h2 class="font-semibold text-2xl mt-20">Create Post</h2>
        <form action="/posted" method="post" class="flex flex-col gap-4 w-3/4 sm:w-1/2">
            <div class="flex flex-col gap-1">
                <label for="author">Author</label>
                <input type="text" placeholder="Enter author name" required name="author" id="author" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md">
            </div>
            <div class="flex flex-col gap-1">
                <label for="heading">Heading</label>
                <input type="text" placeholder="Enter heading" required name="heading" id="heading" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md">
            </div>
            <div class="flex flex-col gap-1">
                <label for="article">Article</label>
                <input type="text" placeholder="Enter article" required name="article" id="article" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md">
            </div>
            <div class="flex flex-col gap-1">
                <label for="article_topic">Blog Topic</label>
                <input type="text" placeholder="Enter article topic" required name="article_topic" id="article_topic" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md">
            </div>
            <div class="flex flex-col gap-1">
                <label for="image_url">Image Url</label>
                <input type="text" placeholder="Enter image url" required name="image_url" id="image_url" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md">
            </div>
            <div class="flex flex-col gap-1">
                <label for="image_alt">Image Alt</label>
                <input type="text" placeholder="Enter image alt value" required name="image_alt" id="image_alt" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md">
            </div>
            <div class="flex flex-col gap-1">
                <label for="content">Blog Content</label>
                <textarea name="content" id="content" required rows="10" placeholder="Enter Content" class="bg-gray-100 border border-[rgba(0,0,0,0.2)] p-2 rounded-md"></textarea>
            </div>
            <button class="text-lg text-white text-center p-3 rounded-md bg-black w-full md:w-1/2 mx-auto my-2">Create Post</button>
        </form>
    </div>
</body>
</html>